include config.pug

doctype html
html(lang="ru")
    head
        block metas
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        block links
            
    body
        .wrapper
            .wrapper__content.wrapper__content--main
                block before-main
                main.main-content.container
                    block content
                include footer.pug